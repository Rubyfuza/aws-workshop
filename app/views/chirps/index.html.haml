.navbar
  .navbar-inner
    %a.brand(href="#") Chirps!

    %form.form-search.navbar-form.pull-right{:action => "/chirps/search", :method => "get", :class => "form-search" }
      %input{:type => "search", :name => "query", :class => "search-query" }
      - # %input{:type => "submit", :value => "Search", :class => "btn" }

%form.form-inline.well(action='/chirps' method='POST')
  .input-prepend
    %span.add-on @
    %input(type='text' name='chirp[user_name]' placeholder='handle')
  %input(type='text' name='chirp[content]' placeholder='Say something!')
  %input(type='submit' value='Chirp your mates')

%ul.chirps
- @chirps.each do |chirp|
  = render :partial => 'chirp', :locals => { :chirp => chirp }

