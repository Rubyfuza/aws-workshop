= form_for @chirp do |f|
  - if @chirp.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chirp.errors.count, "error")} prohibited this chirp from being saved:"
      %ul
        - @chirp.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit 'Save'
